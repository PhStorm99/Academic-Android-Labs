<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:rowCount="4"
    android:columnCount="2"
    android:layout_columnSpan="2" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/line1"
        android:textSize="30dp"
        android:layout_columnSpan="2"/>


    <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button1"
            android:layout_row="1"
            android:layout_column="0" />


    <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/box1"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="fill"/>


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:src="@drawable/flag"
            android:layout_row="2"
            android:layout_column="0"/>

    <!--25dp displayed text size-->


    <Switch
        android:id="@+id/simpleSwitch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_centerHorizontal="true"

        android:checked="false"
        android:text="@string/switchplay"
        android:textColor="#f00"
        android:textOff="Off"
        android:textOn="On" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/line2"
        android:inputType="textPersonName"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"

        />



</GridLayout>

<!-- NOTE: there is not layout_weight in grid because it depends on row and column-->